<Window x:Class="RestaurantManager.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantManager.Wpf"
        xmlns:vm="clr-namespace:RestaurantManager.Wpf.ViewModels"
        xmlns:views="clr-namespace:RestaurantManager.Wpf.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MenuViewModel}">
            <views:MenuView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OrderViewModel}">
            <views:OrderView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportsViewModel}">
            <views:ReportsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <StackPanel Grid.Column="0" Background="#F0F0F0">
            <TextBlock Text="Restaurant App" FontSize="20" FontWeight="Bold" Margin="10"/>
            <Button Content="Meniu" Command="{Binding NavigateMenuCommand}" Margin="5" Padding="5"/>
            <Button Content="Comenzi (Mese)" Command="{Binding NavigateOrdersCommand}" Margin="5" Padding="5"/>
            <Button Content="Rapoarte" Command="{Binding NavigateReportsCommand}" Margin="5" Padding="5"/>
        </StackPanel>

        <!-- Main Content Area -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
